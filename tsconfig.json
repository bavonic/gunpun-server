{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "target": "es6",
    "noImplicitAny": false,
    "lib": [
      "es2017",
      "dom"
    ],
    "strict": false,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowJs": false,
    "inlineSourceMap": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.tsx",
  ]
}